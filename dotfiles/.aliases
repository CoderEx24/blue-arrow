alias shdwn='sudo shutdown -P 00'  \
    view='vim -R'                  \
    vim.tiny='vim --noplugins'     \
    vi='vim -v'                    \
    binview='vim -R -b'            \
    mv='mv -i'                     \
    rm='rm -i'                     \
    mkdir='mkdir -p'               \
    ls='ls --color=auto -h'        \
    tar='tar cvf'                  \
    ztar='tar zcvf'                \
    untar='tar xvf'                \
    zuntar='tar zxvf'              \
